<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:su="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/setting_bg"
    android:orientation="vertical"
    tools:context="com.pisen.ott.settings.weather.CitySelectionActivity" >

    <include layout="@layout/settings_actionbar" />

    <LinearLayout
        style="@style/AppWapper"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_top"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="省份"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#044081" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="城市"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#044081" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="地区"
                android:textColor="@color/white"
                android:textSize="24sp" />
        </LinearLayout>

        <com.pisen.ott.settings.common.location.CityPicker
            android:id="@+id/citypicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_bottom" />
    </LinearLayout>

</LinearLayout>